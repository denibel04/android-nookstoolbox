<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/titleTextView"
        app:layout_constraintTop_toTopOf="@id/titleTextView" />

    <Spinner
        android:id="@+id/typeSpinner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Tipo de Deuda"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title" />


    <TextView
        android:id="@+id/amountPaidTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Amount Paid:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/typeSpinner" />

    <EditText
        android:id="@+id/amountPaid"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter amount paid"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/amountPaidTextView"
        app:layout_constraintTop_toTopOf="@id/amountPaidTextView" />

    <TextView
        android:id="@+id/amountTotalTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Amount Total:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/amountPaidTextView" />

    <EditText
        android:id="@+id/amountTotal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter total amount"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/amountTotalTextView"
        app:layout_constraintTop_toTopOf="@id/amountTotalTextView" />

    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/completedStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Completed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/amountTotalTextView" />

</androidx.constraintlayout.widget.ConstraintLayout>